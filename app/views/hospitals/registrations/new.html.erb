<h2>Hospital Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<div class="field">
    <%= f.label :name %><br/>
    <%= f.email_field :email, autofocus: true, required: true %>
</div>

<div class="field">
    <%= f.label :phone_number %><br/>
    <%= f.phone_field :phone, autofocus: true, required: true %>
</div>

<div class="field">
    <%= f.label "Street number & name, District, Section, Floor and/or Number if applicable "%><br/>
    <%= f.text_field :address, autofocus: true, required: true %>
</div>

<div class="field">
    <%= f.label :city %><br/>
    <%= f.text_field :city, autofocus: true, required: true %>
</div>

<div class="field">
    <%= f.label :country %><br/>
    <%= f.text_field :country, autofocus: true, required: true %>
</div>

<div class="field">
    <%= f.label :postal_code %><br/>
    <%= f.text_field :postal_code, autofocus: true, required: true %>
</div>

<div class="field">
    <%= f.label :country %><br/>
    <%= f.text_field :country, autofocus: true, required: true %>
</div>

<div class="field">
    <%= f.label "Your hospital's email will be used to login" %><br/>
    <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
</div>

<%= f.hidden_field :type, value = "hospital" %>

<div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>
        characters minimum)</em>
    <% end %><br/>
    <%= f.password_field :password, autocomplete: "off" %>
</div>

<div class="field">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
</div>

<div class="actions">
    <%= f.submit "Sign up" %>
</div>
<% end %>

<%= render "hospitals/shared/links" %>
